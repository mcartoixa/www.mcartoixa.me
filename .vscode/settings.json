{
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.git": true
  },
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/*/**": true,
    "**/.tmp/*/**": true,
    "**/node_modules/*/**": true
  },
  "html.autoClosingTags": true,
  "liveServer.settings.root": "/tmp/bin/dist/",
  "prettier.enable": true,
}
